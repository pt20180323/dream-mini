.prd_g_box {
  background: #fff;
}
.maxImg{
  max-width:750rpx!important;
  height:auto!important;
}
.prd_des_top {
  height: 88rpx;
  justify-content: center;
  position: relative;
}
.prd_desc_box{
  margin-left:10rpx;
  margin-right:5rpx;
  color:#2c2c2c;
}

.prd_des_top>text {
  display: inline-block;
  line-height: 88rpx;
  position: relative;
  padding: 0 30rpx;
}

.prd_des_top>text:after {
  content: '';
  display: inline-block;
  width: 100%;
  height: 4rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.maxImg {
  display: block;
  max-width: 100%;
  margin: 0;
  padding: 0;
}

/*视频start*/

.c_video {
  width: 100%;
  height: 749rpx;
  position: relative;
}

.video_img_tpt {
  width: 100%;
  height: initial;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.controls {
  background: #fff;
  position: relative;
}

.cts_tpt {
  height: 750rpx;
}

.pause_img {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  position: absolute;
  width: 120rpx;
  height: 120rpx;
}
.box_rich_text{
  overflow: hidden;
  box-sizing: border-box;
}
/*视频end*/
