.list_p_item {
  flex-shrink: 0;
  margin-bottom: 20rpx;
  position: relative;
  background: #fff;
}

.list_p_item:last-child {
  margin-bottom: 0;
}

.list_p_img {
  position: relative;
  flex-shrink: 0;
  flex: 1;
  height: 100%;
}

.list_p_desc {
  background: #fff;
  color: #000;
  padding: 20rpx 30rpx;
}

.list_p_tit {
  /*text-align:justify;*/
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list_p_box {
  padding: 10rpx 0;
}

.list_p {
  align-items: baseline;
}

.list_large .list_p {
  align-items: flex-end;
}

.c_price {
  font-size: 42rpx;
  line-height: 42rpx;
  font-weight: 600;
  margin-right: 10rpx;
}

.o_price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.list_p_r {
  align-items: baseline;
}

.list_large .list_p_r, .list_small .list_p_r {
  align-items: flex-end;
}

.col_r {
  font-size: 22rpx;
}

.list_middle {
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-top: 10rpx;
}

.list_middle .list_p_img {
  width: 370rpx;
  height: 370rpx;
  flex: initial;
}

.list_middle .list_p_item {
  width: 370rpx;
  margin-bottom: 10rpx;
}

.list_small {
  margin-top: 20rpx;
}

.list_small .list_p_item {
  padding: 25rpx;
  margin-bottom: 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.list_small .list_p_img {
  height: 220rpx;
  flex: 0 1 220rpx;
}

.list_small .list_p_desc {
  margin-left: 20rpx;
  padding: 0;
  flex: 1;
}

.list_small .list_p_tit {
  margin-bottom: 10rpx;
}

.list_small .o_price, .list_small .c_price, .list_small .time_tip {
  padding-bottom: 8rpx;
}

.buy_btn {
  width: 150rpx;
  height: 50rpx;
  border-radius: 8rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
}

.foreshow .txt_color {
  color: #2bc682 !important;
}

.foreshow .bg_color {
  background: #2bc682;
}

.list_large .tag_list {
  align-items: flex-end;
  margin-left: 30rpx;
}

.list_middle .tag_list {
  margin-top: 16rpx;
}

.list_small .tag_list {
  margin-left: 30rpx;
}

.common_icon {
  margin-right: 10rpx;
  font-size: 22rpx;
}

.second {
  display: inline-block;
  width: 55rpx;
  height: 29rpx;
  background: #fe2915;
  color: #fff;
  line-height: 29rpx;
  text-align: center;
  border-radius: 5rpx;
}

.reduce {
  display: inline-block;
  width: 53rpx;
  height: 29rpx;
  background: #ffe4e4;
  color: #fe2915;
  line-height: 29rpx;
  text-align: center;
  border: 1rpx solid #fe2915;
  box-sizing: border-box;
}

.freight {
  display: inline-block;
  width: 55rpx;
  height: 29rpx;
  background: #fe2915;
  color: #fff;
  line-height: 29rpx;
  text-align: center;
}

.cash {
  position: relative;
  display: inline-block;
  width: 40rpx;
  height: 29rpx;
  background: #ffad1f;
  color: #fff;
  line-height: 29rpx;
  text-align: center;
}

.cash_common_point {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: #fff;
  display: inline-block;
  position: absolute;
}

.cash_right1 {
  top: 5rpx;
  right: -1.5rpx;
}

.cash_right2 {
  top: 12.5rpx;
  right: -1.5rpx;
}

.cash_right3 {
  bottom: 5rpx;
  right: -1.5rpx;
}

.cash_left1 {
  top: 5rpx;
  left: -1.5rpx;
}

.cash_left2 {
  top: 12.5rpx;
  left: -1.5rpx;
}

.cash_left3 {
  bottom: 5rpx;
  left: -1.5rpx;
}

.f_vip {
  width: 93rpx;
  height: 32rpx;
  background-color: #000;
  margin-left: 10rpx;
  color: #ffd759;
  font-size: 24rpx;
  border-radius: 12rpx 0 12rpx 0;
}

.o_price1{
  color: #ff8a00;
  text-decoration:none;
}
