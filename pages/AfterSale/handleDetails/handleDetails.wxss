.Det_goods{
  padding-left: 24rpx;
  background: #fff;
}
.Det_goods_main{
  margin: 32rpx 24rpx 20rpx 0;
}
.main_img{
  width:180rpx;
  height:180rpx;
  overflow: hidden;
  border-radius:4px;
  margin-right: 24rpx;
}

.Det_goods_Enc{
  border-radius:8px;
  margin: 0 24rpx 30rpx 0;
  background:#F2F4F7;
  padding: 20rpx 16rpx;
  box-sizing: border-box;
}
.Enc_left{
  margin-right: 16rpx;
}
.Enc_list{
  margin-bottom: 10rpx;
}
.Enc_list:last-child{
  margin-bottom: 0;
}
.handle{
  padding: 0 24rpx;
  background: #fff;
}
.handle_list{
  padding: 32rpx 0;
  border-bottom: 2rpx solid #D9D9D9;
}
.handle_textarea{
  width: 100%;
  height:158rpx;
  border-radius:8px;
  background:#FAFAFA;
  box-sizing: border-box;
  padding: 16rpx 24rpx;
  border:2rpx solid #D9D9D9;
}
.img_list_add{
  background:rgba(0,0,0,0.02);
  border:2rpx dashed rgba(0,0,0,0.15);
}
.Img_main{
  position: relative;
  width:160rpx;
  height:160rpx;
  border-radius:8rpx;
  margin: 0 20rpx 32rpx 0;
}
.imgs_margin{
  width:160rpx;
  height:160rpx;
}
.add_icon{
  font-size: 70rpx;
  line-height: 1;
}
.Img_main:nth-child(4n+0) {
  margin-right: 0;
}
.handle_det_Btn{
  margin: 60rpx auto 20rpx;
}
.handle_btn{
  width:560rpx;
  height:72rpx;
  color:#fff;
  font-size:28rpx;
  font-weight:400;
  border-radius:8rpx;
  letter-spacing:8rpx;
  font-family:Noto Sans S Chinese;
  background:linear-gradient(90deg,rgba(254,116,64,1) 0%,rgba(254,72,64,1) 100%);
}
/* 删除图片 */
.e_del {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: -15rpx;
  top: -15rpx;
  background: #ff0036;
  border-radius: 15rpx;
}

.e_del::after {
  position: absolute;
  content: '';
  width: 18rpx;
  height: 3rpx;
  background: #fff;
  top: 50%;
  left: 50%;
  margin: -1.5rpx 0 0 -9rpx;
}
.handle_inp{
  text-align: right
}