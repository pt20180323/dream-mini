/*左一右二*/
.Img_box_left{
  position:relative;
  overflow: hidden;
  padding-left:50%;
}
.Img_box_left view:nth-child(1){
  position:absolute;
  overflow:hidden;
  width:50%;
  top:0;
  left:0;
}
.Img_box_left view image{
  float:left;
  width:100%;
}
.Img_box_left view{
  overflow:hidden;
  float:left;
  width:100%;
}
/*左二右1*/
.Img_box_right{
  position:relative;
  overflow: hidden;
  padding-right:50%;
}
.Img_box_right view:nth-child(3){
  position:absolute;
  overflow:hidden;
  width:50%;
  top:0;
  right:0;
}
.Img_box_right view image{
  float:left;
  width:100%;
}
.Img_box_right view{
  overflow:hidden;
  float:left;
  width:100%;
}