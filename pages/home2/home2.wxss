.hearder {
  position: fixed;
  z-index: 10;
  width: 100%;
}

.show_top{
  background: transparent;
}

.hide_top{
  background: #fff;
}
/* 轮播图 */

.search_item {
  flex: 1;
  position: relative;
  padding: 15rpx 25rpx;
}

/*搜索框样式*/

.search_input {
  width: 100%;
  height: 63rpx;
  border-radius: 10rpx;
  padding: 0 20rpx 0 60rpx;
}
.search_i1{
  background:#000;
  opacity: 0.2
}
.search_i2{
  background:#f2f2f2;
  opacity: 1;
}

.search_i {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  border: 4rpx solid #9f9f9f;
  position: absolute;
  z-index: 3;
  top: 27rpx;
  left:42rpx;
}

.search_i:after {
  content: '';
  display: inline-block;
  width: 15rpx;
  height: 4rpx;
  background-color: #9f9f9f;
  position: absolute;
  bottom: -2rpx;
  right: -10rpx;
  transform: rotate(45deg);
  z-index: 2;
}

.img_box {
  position: relative;
  margin-right: 25rpx;
}

.img_box>image {
  display: block;
  width: 60rpx;
  height: 60rpx;
}

.wrap {
  position: relative;
  width: 100%;
}

.slide-containers {
  width: 750rpx;
}

.slide_img {
  width: 750rpx;
}

.swp_content {
  position: absolute;
  bottom: 40rpx;
  left: 10rpx;
}

.wrap_name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 图片 */

image {
  display: block;
}

.img {
  width: 100%;
}

.img_content {
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
}

