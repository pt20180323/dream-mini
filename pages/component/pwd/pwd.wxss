/* 支付密码框 */
.pay_number{
  margin:0 auto;
  display:flex;
  flex-direction:row;
  border:1rpx solid #ddd;
  border-radius:10rpx;
  box-sizing:border-box;
}
.pay_number_interval{
  margin:0 auto;
  display:flex;
  flex-direction:row;
  border-left:1rpx solid #666;
}
/* 第一个格子输入框 */
.content .noBorder{
   border-left:none; 
}
/* 支付密码框聚焦的时候 */
.get_focus{
  border-color:#ddd;
}
/* 单个格式样式 */
.password_dot{
  flex:1;
  border-left:1rpx solid #cfd4d3;
  display:flex;
  align-items:center;
  justify-content:center;
}
.password_dot_interval{
  flex:1;
  border:1rpx solid #cfd4d3;
  margin-right:5px;
  display:flex;
  align-items:center;
  justify-content:center;
}

/* 单个格式样式（聚焦的时候） */
.get_focus_dot{
  flex:1;
  border-left:1rpx solid #ddd;
  display:flex;
  align-items:center;
  justify-content:center;
}
.get_focus_dot_interval{
  flex:1;
  border:1rpx solid #ddd;
  margin-right:6rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
/* 模拟光标 */
.cursor{
  width:2rpx;
  height:30rpx;
  background-color:#333;
  animation:focus 0.7s infinite;
}
/* 光标动画 */
@keyframes focus{
  from{
    opacity:1;
  }
  to{
    opacity:0;
  }
}
/* 格式中的点 */
.dot{
  width:20rpx;
  height:20rpx;
  background-color:#000;
  border-radius:50%;
}
/* 输入框 */
.input_container{
  height:0;
  width:0;
  min-height:0;
  position:relative;
  text-indent:-999em;
  left:-100%;
}
