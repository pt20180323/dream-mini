      </picker>
      <view class="local_btn" bindtap="getLocal">
        <text class="icon-address"></text>
      </view>
    </view>    
  </view>  
  <view class="f_row g_line_bot n_addr_item f_jc_sb f_r_cnt">
    <label>详细地址</label>
    <input placeholder="街道门牌信息" value="{{address}}" bindinput="addrIpt" />
