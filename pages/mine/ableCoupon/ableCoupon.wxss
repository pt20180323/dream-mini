page{
  background:#f2f2f2;
}
.able_item{
  background:#FFF;
  margin-bottom:20rpx;
  position:relative;
  padding:25rpx;
}
.able_item:last-child{
  margin-bottom:0;
}
.disabled_item .cpn_top{
  background:#9a9a9a;
}
.disabled_item .cpn_v_n,.disabled_item .cpn_v_i,.disabled_item .cpn_date,.disabled_item .cpn_dist{
  color:#ccc;
}
.f_m_btn{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:none;
  border:none;
}
.cpn_top{
  height:64rpx;
  padding-bottom:6rpx;
  position:relative;
  line-height:60rpx;
  color:#FFF;
  background:#ff645c;
  border-radius:10rpx 10rpx 0 0;
}
.cpn_top>image{
  width:100%;
  height:6rpx;
  position:absolute;
  bottom:0;
  left:0;
}
.cpn_s_box{
  padding:20rpx;
}
.cpn_c{
  background-color: #fff;
  margin-bottom: 20rpx;
}
.cpn_v_box_t{
  padding-right: 25rpx;
}
.cpn_v_n{
  display:inline-block;
  color:#333;
  font-size:80rpx;
  min-width:150rpx;
  text-align:center;
}
.cpn_v_i{
  font-size:30rpx;
}
.cpn_s_des{
  justify-content:center;
  margin-left:20rpx;
  min-height:120rpx;
  padding:0 30rpx;
  border-left:2rpx solid #ccc;
}
.cpn_dist{
  font-size:30rpx;
  color:#333;
  margin-bottom:20rpx;
}
.cpn_date{
  font-size:24rpx;
  color:#999;
}
.cpn_f{
  margin-right: 25rpx;
}
.cpn_f_f{
  margin-left: 25rpx;
}
.cpn_chk{
  display:inline-block;
  width:44rpx;
  height:44rpx;
  border-radius:50%;
  border:2rpx solid #ccc;
  background:#fff;
  position:relative;
  flex-shrink:0;
}
.cpn_cur{
  border-color:#ff4949;
  background:#ff4949;
}
.cpn_cur:after{
  content:'';
  display:inline-block;
  width:20rpx;
  height:10rpx;
  border:4rpx solid #FFF;
  border-width:0 0 4rpx 4rpx;
  position:absolute;
  top:50%;
  left:50%;
  transform:rotate(-45deg) translate3d(-50%,-50%,0);
  margin-top:-14rpx;
  margin-left:2rpx;
}