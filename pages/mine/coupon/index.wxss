.o_nav{
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #f5f5f5;
}
.o_nav_i{
  display:flex;
  flex-direction:row;
  flex:1;
  height:100rpx;
  justify-content:center;
  align-items:center;
  position:relative;
  color:#343434;
  background:#FFF;
}
.o_nav_c{
  color:#ff0036;
}
.o_nav_c:after{
  content:'';
  display:block;
  position:absolute;
  left:25rpx;
  right:25rpx;
  bottom:0;
  height:5rpx;
  background:#ff0036;
}
.wrapper{
  margin: 10rpx 0;
  padding: 0 25rpx;
}
.content{
  position: relative;
  height: 180rpx;
  background: #fff;
  border-radius: 5rpx;
  margin-bottom: 20rpx;
  box-shadow: 5rpx 5rpx 3rpx #ebebec;
  display: flex;
  flex-direction: row;
}
.img{
  height: 85rpx;
  margin-left: 40rpx;
  margin-top: 47.5rpx;
  margin-right: 35rpx;
}
.img>image{
  width: 85rpx;
  height: 85rpx;
}
.txt{
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 160rpx;
  z-index: 2;
  top: 40rpx;
}
.txt_title{
  color: #343434;
  font-size: 26rpx;
  padding-bottom:15rpx;
}
.txt_desc{
  color: #000;
  font-size: 40rpx;
}
.status>image{
  position: absolute;
  width: 170rpx;
  height: 150rpx;
  right: 15rpx;
}
.empty{
  text-align: center;
  padding-top: 200rpx;
}
.empty>image{
  width: 160rpx;
  height: 160rpx;
}
.empty_txt{
  display: block;
  width: 100%;
  color: #a9a9a9;
}
