.page {
  display: block;
  min-height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  padding-top: 124rpx;
  box-sizing: border-box;
}
.content{
  position: relative;
  background: #fff;
  border-radius: 5rpx;
  margin: 0 30rpx;
}
.head{
  position: relative;
  height:300rpx;
  border-bottom: 3rpx dashed #f2f2f2;
}
.head-before{
  content: '';
  display: block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -10rpx;
  left: -10rpx;
}
.head-after{
  content: '';
  display: block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
}
.cancel{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 30rpx;
}
.txt{
  width: 100%;
  display: flex;
  flex-direction: column; 
  padding-top:25rpx;
}
.txt_common{
  display: block;
  margin-bottom: 25rpx;
}
.txt_title{
  color: #878787;
  text-align: center;
}
.txt_desc{
  color: #000;
  font-size: 40rpx;
  text-align: center;
}
.qrcode{
  position: relative;
  margin-top: 20rpx;
}
.qr_img{
  width: 100%;
  text-align: center;
}
.qr_img>image{
  width:300rpx;
  height:300rpx;
  background:#f5f5f5
}
.qr_txt{
  display: flex;
  flex-direction: column;
  text-align: center;
  padding-bottom: 100rpx;
  padding-top: 40rpx;
}
.code{
  color: #000;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}
.desc{
  font-size: 24rpx;
}
