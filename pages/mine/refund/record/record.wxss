.title_bg{
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}
.handle{
  padding: 0 24rpx;
  background: #fff;
}
.Sale_handle{
  padding: 32rpx 24rpx;
}
.Sale_title{
  height: 120rpx;
  width: 100%;
}
.Sale_title text{
  color:#fff;
  font-size:36rpx;
  letter-spacing:4rpx;
  margin-left: 24rpx;
  font-family:Noto Sans S Chinese;
}
.Sale_btns{
  margin-top: 50rpx;
}
.Sale_btn{
  color:#333;
  background:#fff;
  border:2rpx solid #333;
  line-height: 1;
  padding: 10rpx 24rpx;
}
.status_yuan{
  width:24rpx;
  height:24rpx;
  border-radius:50%;
  position: relative;
}
/* 状态圆圈 */
.frist{
  background:rgba(254,72,64,.2);
}
.last{
  background:rgba(0,0,0,.05);
}
.last::after,.frist::after{
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width:12rpx;
  height:12rpx;
  border-radius:50%;
  transform: translate(-50%, -50%)
}
.frist::after{
  background:#FE4840;
}
.last::after{
  background: #D9D9D9;
}
.main_img{
  width:180rpx;
  height:180rpx;
  overflow: hidden;
  border-radius:4px;
  margin-right: 24rpx;
}
.handle_list{
  padding: 32rpx 0;
  border-bottom: 2rpx solid #D9D9D9;
}
.handle_list:last-child{
  border: none;
}
.addressWidth{
  max-width: 400rpx;
}