  box-sizing: border-box;
  flex: 1;
}

.refund_info {
  flex: 1;
}

.line_top {
  border-top: 1rpx solid #eee;
}

image {
  display: block;
}

.refund_img {
  margin-right: 24rpx;
}

.refund_img>image {
