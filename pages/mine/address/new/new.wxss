page{
  background:#f2f2f2;
}
.n_addr_list{
  padding-top:20rpx;
}
.n_addr_item{
  background:#FFF;
  height:100rpx;
  padding:0 25rpx;
  position:relative;
}
.n_addr_item label{
  display:inline-block;
  width:120rpx;
  color:#000;
  flex-shrink:0;
}
.n_addr_item input{
  height:100rpx;
  width:570rpx;
  text-align:right;
}
.area_picker {
  height:100rpx;
  line-height:100rpx;
  width:570rpx;
  text-align:right;
}
.save_btn{
  margin:90rpx 25rpx 0;
  height:86rpx;
  border-radius:8rpx;
  background:#ff4949;
  color:#FFF;
  line-height:86rpx;
  font-size:32rpx;
}
.local_box{
  flex:1;
  padding-right:60rpx;
  position:relative;
}
.lb_cpr{
  padding-right:0;
}
.sub_local{
  padding-right:0;
}
.local_box input{
  width:100%;
}
.local_btn{
  width:60rpx;
  height:100rpx;
  position:absolute;
  top:0;
  right:0;
  color:#fe2d4a;
}
.local_btn .icon-address{
  font-size:40rpx;
  position:absolute;
  top:50%;
  right:0;
  transform:translate3d(0,-50%,0);
}
.local_btn .icon-address:before{
  color:#f03;
}
.set_box{
  height:90rpx;
  position:relative;
  padding:0 20rpx;
  background:#FFF;
  align-items:center;
}
.set_init{
  position:relative;
  padding-left:56rpx;
  line-height:90rpx;
}
.init_i{
  content:'';
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
  width:44rpx;
  height:44rpx;
  border:2rpx solid #ccc;
  box-sizing:border-box;
  position:absolute;
  left:0;
  top:50%;
  margin-top:-22rpx;
  border-radius:50%;
}
.init_i:after{
  content:'';
  display:inline-block;
  width:28rpx;
  height:28rpx;
  border-radius:50%;
  background:#ccc;
}
.set_cur .init_i{
  border-color:#f03;
}
.set_cur .init_i:after{
  background:#f03;
}

.pick_pop{
  position:fixed;
  width:0;
  height:0;
  bottom:0;
  left:0;
  z-index:10;
}
.pick_mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background:rgba(0,0,0,0.5);
  opacity:0;
  display:none;
  transition:all .3s ease-in-out;
}
.show_pick .pick_mask{
  opacity:1;
  display:block;
}
.pick_box{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  transition:all .3s ease-in-out;
  transform:translate(0, 120%);
}
.show_pick .pick_box{
  transform:translate(0,0);
}
.pick_head{
  height:100rpx;
  background:#FFF;
  position:relative;
}
.pick_btn{
  line-height:100rpx;
  padding:0 60rpx;
  font-size:32rpx;
  color:#808080;
  position:relative;
}
.pick_sure{
  color:#1aad19;
}
.pop_pick_view{
  width:100%;
  height:600rpx;
  background:#FFF;
}
.pop_pick_item{
  height:100rpx;
  line-height:100rpx;
  text-align:center;
}