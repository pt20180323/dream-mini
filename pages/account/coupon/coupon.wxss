.coupon_box {
  padding-top: 30rpx;
  background: #fff;
}

.coupon_item {
  height: 235rpx;
  width: 710rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 8rpx;
  box-shadow: 0 0 10rpx 0 rgba(24, 65, 100, 0.2);
}

.c_header {
  height: 56rpx;
  justify-content: space-between;
  padding: 0 10rpx;
  margin: 0 20rpx;
  position: relative;
}

.c_info {
  z-index: 10;
  border-radius: 0 0 6rpx 6rpx;
  position: relative;
}

.c_left {
  color: #ff9400;
  font-size: 36rpx;
  height: 164rpx;
  width: 200rpx;
  padding-left: 20rpx;
}

.f_80 {
  font-size: 80rpx;
}

.f_32 {
  font-size: 32rpx;
}

.c_right {
  color: #999;
  font-size: 24rpx;
  width: 400rpx;
}

.fs_56 {
  font-size: 56rpx;
}

.c_999 {
  color: #999;
}

.checkbox {
  display: inline-block;
  position: absolute;
  right: 65rpx;
  top: 75rpx;
}

.checkbox::after, .checkbox::before {
  content: '';
  display: inline-block;
  position: absolute;
  box-sizing: border-box;
  top: 50%;
  transform: translate3d(0, -50%, 0);
}

.checkbox::before {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
  background: #fff;
  left: 0;
}

.checkbox.rd_sel::before {
  background: #09bb07;
  border-color: #09bb07;
}

.checkbox.rd_sel::after {
  top: -13rpx;
  left: 16rpx;
  right: 20rpx;
  width: 12rpx;
  height: 25rpx;
  border-width: 0 4rpx 4rpx 0;
  border-color: #fff;
  border-style: solid;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.sure_btn {
  width: 600rpx;
  height: 80rpx;
  background-color: #2093fc;
  border-radius: 8rpx;
  color: #fff;
  font-size: 30rpx;
}

.bot_fixed_box {
  position: fixed;
  height: 96rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 10;
  justify-content: center;
}

.left_cir, .right_cir {
  width: 15rpx;
  height: 30rpx;
  border: 3rpx solid #eee;
  border-radius: 100% 0 0 100%/50%;
  border-right: none;
  position: absolute;
  top: 40rpx;
  background: #fff;
}

.left_cir {
  left: -4rpx;
  transform: rotate(180deg);
}

.right_cir {
  right: -4rpx;
}

.coupon_cir {
  width: 675rpx;
  height: 4rpx;
}

.g_mt_15 {
  margin-top: 15rpx;
}
