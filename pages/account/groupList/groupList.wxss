.c_name {
  color: #999;
  margin-top: 10rpx;
  padding: 10rpx 0;
}

.share_tag {
  padding: 25rpx;
}

.s_name {
  flex: 1;
}

.s_item {
  box-sizing: border-box;
  padding: 15rpx 25rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.ope_btn {
  width: 96rpx;
  height: 48rpx;
  border-radius: 8rpx;
  color: #2093fc;
  border: solid 1rpx #2093fc;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
}

.i_btn {
  color: #fff;
  background: #2093fc;
  width: 600rpx;
  height: 80rpx;
  font-size: 30rpx;
  margin: 0 40rpx;
  justify-content: center;
  border-radius: 8rpx;
}

.bot_fixed_box {
  position: fixed;
  height: 110rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #fff;
  padding: 0 25rpx;
  z-index: 10;
  justify-content: center;
}

.mask {
  width: 100%;
  bottom: 0;
  left: 0;
  height: 0;
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
  transition: opacity 0.3s ease-in-out;
  z-index: 9999;
  opacity: 0;
}

.showmask {
  height: 100%;
  opacity: 1;
}

.iknow_tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  width: 510rpx;
  background: #fff;
  padding: 45rpx 25rpx 25rpx;
  border-radius: 12rpx;
}

.share_img {
  width: 270rpx;
}

.show_box {
  border: 1rpx solid #eee;
  padding: 10rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  width: 290rpx;
}

.mini_pro {
  width: 153rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.icon_btn {
  width: 240rpx;
  height: 80rpx;
  background-color: #2093fc;
  border-radius: 8rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 32rpx 0;
}

.user_img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  margin: 20rpx 10rpx 10rpx 0;
}

.icon_btn1 {
  color: #666;
  border: 1rpx solid #bbb;
  background: #fff;
  margin-right: 32rpx;
}

.icon_box {
  width: 100%;
  height: 112rpx;
  margin-top: 40rpx;
}

.img_box {
  height: 120rpx;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
}
