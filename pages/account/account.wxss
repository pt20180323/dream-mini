.search_box {
  margin: 16rpx 25rpx;
  position: relative;
  background: #fff;
}

.search {
  width: 100%;
  height: 64rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 70rpx;
}

.search_i {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  border: 3rpx solid #ccc;
  position: absolute;
  top: 50%;
  margin-top: -15rpx;
  background: #fff;
  z-index: 3;
}

.search_i1 {
  left: 20rpx;
}

.search_i:after {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 3rpx;
  background-color: #ccc;
  position: absolute;
  bottom: 0;
  right: -4rpx;
  transform: rotate(45deg);
  z-index: 2;
}

.s_close_i {
  width: 38rpx;
  height: 38rpx;
  background: #c1c1c1;
  border-radius: 50%;
  position: absolute;
  right: 12rpx;
  top: 50%;
  margin-top: -19rpx;
  z-index: 2;
  transform: rotate(45deg);
}

.s_close_i:before, .s_close_i:after {
  content: '';
  display: inline-block;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.s_close_i:before {
  width: 28rpx;
  height: 2rpx;
}

.s_close_i:after {
  width: 2rpx;
  height: 28rpx;
}
