/*顶部导航*/

.g_nav_i {
  display: flex;
  flex-direction: row;
  flex: 1;
  justify-content: center;
  align-items: center;
  position: relative;
  color: #000;
  background: #fff;
}

.g_n_txt {
  height: 96rpx;
  line-height: 96rpx;
  position: relative;
  padding: 0 25rpx;
}

.g_nav_c .g_n_txt:after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 5rpx;
}

.g_top_fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}

.wrap_name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.no_more {
  padding: 15rpx 0;
  text-align: center;
}

.no_img {
  width: 280rpx;
  height: 250rpx;
}

.no_trend {
  margin-top: 200rpx;
}

.noTrend-text {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/*-------适配iPhonex---star---------  */

.fix-iphonex-button {
  bottom: 32rpx !important;
}

.fix-iphonex-button::after {
  content: '';
  display: block;
  position: fixed;
  left: 0;
  bottom: -32rpx;
  height: 32rpx;
  width: 100%;
  background: #fff;
}
