  z-index: 2;
}

.arr_i {
  position: relative;
  padding-right: 20rpx;
}

.arr_i:after {
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  top: 50%;
  right: 0;
  border: 2rpx solid #999;
  border-width: 0 2rpx 2rpx 0;
}
